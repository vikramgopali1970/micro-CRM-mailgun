doctype html
html
  head
    link(rel='stylesheet', type='text/css', href='stylesheets/bootstrap.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css', integrity='sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp', crossorigin='anonymous')
    link(rel='stylesheet', type='text/css', href='https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.css')
    link(rel='stylesheet', type='text/css', href='stylesheets/dashBoard.css')
  body(ng-app='myApp', ng-controller='parentCtrll')
    section#section-first
      nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') DASHBOARD
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
              li
                a(href='/createList') Create List
          // /.navbar-collapse
        // /.container-fluid
    section#section-second.container-fluid
      .row.grid
        .col-md-4.grid-item(ng-repeat='(key,value) in obj')
          ul.list-group
            li.list-group-item.set-center
              | {{key.toUpperCase()}}
              a.ion-trash-a.delete-list(ng-click='onDelete(key)')
            li.list-group-item(ng-repeat='(key1,value1) in value')
              span.badge {{value1.email}}
              | {{value1.fname}}
            button.list-group-item.list-group-item-action.btn.btn-primary.btn-lg(type='button', data-toggle='modal', ng-click='setKey(key)', data-target='#myModal') Send Mail
    section#section-third-model
      // Modal
      #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
        .modal-dialog(role='document')
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') Ã—
              h4#myModalLabel.modal-title Enter Message Body
            .modal-body
              textarea.message-body(rows='20')
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal' ng-click='clearBody()') Close
              button.btn.btn-primary(type='button', ng-click='sendmail(mailingAddr)') Send Mail
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js', integrity='sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa', crossorigin='anonymous')
    script(src='https://unpkg.com/masonry-layout@4.1/dist/masonry.pkgd.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js')
    script(src='javascripts/indexApp.js')
    script.
      function setMasonry() {
        $('.grid').masonry({
          itemSelector: '.grid-item',
          percentPosition: true
        });
      }
