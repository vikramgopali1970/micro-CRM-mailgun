doctype html
html
  head
    title
    link(rel='stylesheet', type='text/css', href='stylesheets/bootstrap.css')
    link(rel='stylesheet', type='text/css', href='stylesheets/dashBoard.css')
  body(ng-app='myApp1', ng-controller='createlistctrllr')
    section#section-first
      nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') DASHBOARD
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
              li
                a(href='/createList') Create List
          // /.navbar-collapse
        // /.container-fluid
    .row
      .col-md-6.col-md-offset-3
        ul.list-group
          input.form-control(type='text', placeholder="Recipient's username", aria-describedby='basic-addon2', ng-model='newItemName')
          input.form-control(type='text', placeholder="Recipient's email", aria-describedby='basic-addon2', ng-model='newItemEmail')
          input.form-control(type='text', placeholder="Recipient's catagory", aria-describedby='basic-addon2', ng-model='newItemCatagory')
          button(ng-click='addItem()') Add User
      section#section-second
        .row
          .col-xs-12
            .col-md-4(ng-repeat='(key,value) in obj')
              ul.list-group
                li.list-group-item.set-center {{key.toUpperCase()}}
                li.list-group-item(ng-repeat='(key1,value1) in value')
                  span.badge {{value1.email}}
                  | {{value1.fname}}
                button.list-group-item.list-group-item-action(type='button', onClick='this.disabled=true;this.value="Saved"' ng-click='savelist(key.toLowerCase())') Save this List
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js')
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js')
    script(src='javascripts/createlistApp.js')
